      "item": [
        {
          "name": "Concurrent Booking - User 1",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"seatIds\": [5],\n  \"idempotencyKey\": \"user1-{{$timestamp}}\",\n  \"userId\": \"+15551111111\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/shows/1/book",
