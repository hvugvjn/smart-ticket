    {
      "name": "Booking",
      "item": [
        {
          "name": "Book Seats (with Idempotency)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"seatIds\": [1, 2, 3],\n  \"idempotencyKey\": \"{{$randomUUID}}\",\n  \"userId\": \"+15551234567\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/shows/1/book",
              "host": ["{{base_url}}"],
              "path": ["api", "shows", "1", "book"]
            }
          }
        },
        {
          "name": "Confirm Booking",
          "request": {
            "method": "POST",
