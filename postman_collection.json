{
  "info": {
    "name": "NexTravel Ticket Booking API",
    "description": "Complete API collection for the Level-5 Intelligent Ticket Booking Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Shows",
      "item": [
        {
          "name": "Get All Shows",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/shows",
              "host": ["{{base_url}}"],
              "path": ["api", "shows"]
            }
          }
        },
        {
          "name": "Get Show by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/shows/1",
              "host": ["{{base_url}}"],
              "path": ["api", "shows", "1"]
            }
          }
        },
        {
          "name": "Create Show (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"operatorName\": \"Test Bus Lines\",\n  \"source\": \"Los Angeles\",\n  \"destination\": \"San Francisco\",\n  \"departureTime\": \"2025-12-20T08:00:00Z\",\n  \"arrivalTime\": \"2025-12-20T14:00:00Z\",\n  \"duration\": \"6h 00m\",\n  \"price\": \"65.00\",\n  \"vehicleType\": \"Luxury Coach\",\n  \"rating\": \"4.7\",\n  \"totalSeats\": 45,\n  \"amenities\": [\"WiFi\", \"Restroom\", \"Snacks\", \"Power Outlets\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/shows",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "shows"]
            }
          }
        }
      ]
    },
